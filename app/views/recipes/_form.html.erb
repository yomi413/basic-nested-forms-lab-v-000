<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  <%= f.fields_for :ingredients do |ing| %>
    <%= ing.label :name %>
    <%= ing.text_field :name %>

    <%= ing.label :quantity %>
    <%= ing.text_field :quanity %>

    <%= ing.label :recipe %>
    <%= ing.text_field :recipe_id %>
    
  <% end %>

  <%= f.submit %>
<% end %>
